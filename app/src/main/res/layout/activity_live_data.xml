<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gdp"
    tools:context=".LiveDataActivity">

    <TextView
        android:id="@+id/tvBoost_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/select_tune"
        android:layout_marginStart="-20dp"
        android:layout_toEndOf="@+id/gauge1"
        android:textColor="@color/colorOrange"
        android:textSize="20sp" />

    <Button
        android:id="@+id/select_tune"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/progressive_graph_view" />

    <ImageView
        android:id="@+id/wifi_switch"
        android:layout_width="58dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:background="@drawable/wifi_not_connected" />

    <ImageView
        android:id="@+id/btn_info"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/help_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/helpbutton" />

    <de.nitri.gauge.Gauge
        android:id="@+id/gauge1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="130dp"
        gauge:faceColor="@color/colorBlackTransparent"
        gauge:initialValue="0"
        gauge:labelTextSize="20"
        gauge:maxValue="120"
        gauge:minValue="0"
        gauge:needleColor="@color/colorOrange"
        gauge:scaleColor="@color/colorOrange"
        gauge:totalNicks="150"
        gauge:valuePerNick="1" />

    <de.nitri.gauge.Gauge
        android:id="@+id/gauge2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="215dp"
        android:layout_marginTop="130dp"
        gauge:faceColor="@color/colorBlackTransparent"
        gauge:initialValue="0"
        gauge:labelTextSize="20"
        gauge:maxValue="120"
        gauge:minValue="0"
        gauge:needleColor="@color/colorOrange"
        gauge:scaleColor="@color/colorOrange"
        gauge:totalNicks="150"
        gauge:valuePerNick="1" />

    <de.nitri.gauge.Gauge
        android:id="@+id/gauge3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="90dp"
        gauge:faceColor="@color/colorBlackTransparent"
        gauge:initialValue="0"
        gauge:labelTextSize="10"
        gauge:maxValue="120"
        gauge:minValue="0"
        gauge:needleColor="@color/colorOrange"
        gauge:scaleColor="@color/colorOrange"
        gauge:totalNicks="150"
        gauge:valuePerNick="1" />

    <de.nitri.gauge.Gauge
        android:id="@+id/gauge4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="230dp"
        gauge:faceColor="@color/colorBlackTransparent"
        gauge:initialValue="0"
        gauge:labelTextSize="10"
        gauge:maxValue="120"
        gauge:minValue="0"
        gauge:needleColor="@color/colorOrange"
        gauge:scaleColor="@color/colorOrange"
        gauge:totalNicks="150"
        gauge:valuePerNick="1" />

    <de.nitri.gauge.Gauge
        android:id="@+id/gauge5"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="485dp"
        android:layout_marginTop="90dp"
        gauge:faceColor="@color/colorBlackTransparent"
        gauge:initialValue="0"
        gauge:labelTextSize="10"
        gauge:maxValue="120"
        gauge:minValue="0"
        gauge:needleColor="@color/colorOrange"
        gauge:scaleColor="@color/colorOrange"
        gauge:totalNicks="150"
        gauge:valuePerNick="1" />

    <de.nitri.gauge.Gauge
        android:id="@+id/gauge6"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="485dp"
        android:layout_marginTop="230dp"
        gauge:faceColor="@color/colorBlackTransparent"
        gauge:initialValue="0"
        gauge:labelTextSize="10"
        gauge:maxValue="120"
        gauge:minValue="0"
        gauge:needleColor="@color/colorOrange"
        gauge:scaleColor="@color/colorOrange"
        gauge:totalNicks="150"
        gauge:valuePerNick="1" />

    <ImageView
        android:id="@+id/gauge1_large"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/gauge1"
        android:layout_alignTop="@id/gauge1"
        android:contentDescription="@string/gauge_1"
        app:srcCompat="@drawable/gauge_cover" />

    <ImageView
        android:id="@+id/gauge2_large"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/gauge2"
        android:layout_alignTop="@id/gauge2"
        android:contentDescription="@string/gauge_2"
        app:srcCompat="@drawable/gauge_cover" />

    <ImageView
        android:id="@+id/gauge1_small"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/gauge3"
        android:layout_alignTop="@id/gauge3"
        android:contentDescription="@string/gauge_1_small"
        app:srcCompat="@drawable/gauge_cover" />

    <ImageView
        android:id="@+id/gauge2_small"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/gauge4"
        android:layout_alignTop="@id/gauge4"
        android:contentDescription="@string/gauge_2_small"
        app:srcCompat="@drawable/gauge_cover" />

    <ImageView
        android:id="@+id/gauge3_small"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/gauge5"
        android:layout_alignTop="@id/gauge5"
        android:contentDescription="@string/gauge_3_small"
        app:srcCompat="@drawable/gauge_cover" />

    <ImageView
        android:id="@+id/gauge4_small"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/gauge6"
        android:layout_alignTop="@id/gauge6"
        android:contentDescription="@string/gauge_4_small"
        app:srcCompat="@drawable/gauge_cover" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="253dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="@drawable/live_data"
        android:contentDescription="@string/live_data" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gauge1"
        android:layout_alignEnd="@+id/gauge1"
        android:layout_alignStart="@+id/gauge1"
        android:layout_alignTop="@+id/gauge1"
        android:layout_marginBottom="-120dp"
        android:gravity="center"
        android:text="@string/egt"
        android:textColor="@color/colorOrange"
        android:textSize="16sp" />

    <ImageView
        android:id="@id/btn1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/gauge1"
        android:layout_alignEnd="@id/gauge1"
        android:layout_marginBottom="-45dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/button"
        android:contentDescription="@string/button_for_gauge_5" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gauge3"
        android:layout_alignEnd="@+id/gauge3"
        android:layout_alignStart="@+id/gauge3"
        android:layout_alignTop="@+id/gauge3"
        android:layout_marginBottom="-70dp"
        android:gravity="center"
        android:text="@string/turbo_vanes"
        android:textColor="@color/colorOrange"
        android:textSize="12sp" />

    <ImageView
        android:id="@id/btn3"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/gauge3"
        android:layout_alignStart="@id/gauge3"
