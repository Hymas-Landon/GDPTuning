<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gdp"
    tools:context=".LiveDataActivity">

    <Button
        android:id="@+id/select_tune"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_empty"
        android:text="@string/progressive_graph_view" />

    <TextView
        android:id="@+id/text_view_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorOrange"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/btn_connection"
        android:layout_width="58dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wificonnected" />

    <ImageView
        android:id="@+id/btn_info"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/helpbutton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <de.nitri.gauge.Gauge
        android:id="@+id/gauge1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="130dp"
        gauge:faceColor="@color/colorBlackTransparent"
        gauge:initialValue="0"
        gauge:labelTextSize="25"
        gauge:maxValue="120"
        gauge:minValue="0"
        gauge:needleColor="@color/colorOrange"
        gauge:scaleColor="@color/colorOrange"
        gauge:totalNicks="150"
        gauge:valuePerNick="1" />

    <de.nitri.gauge.Gauge
        android:id="@+id/gauge2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="175dp"
        android:layout_marginTop="130dp"
        gauge:faceColor="@color/colorBlackTransparent"
        gauge:initialValue="0"
        gauge:labelTextSize="25"
        gauge:maxValue="120"
        gauge:minValue="0"
        gauge:needleColor="@color/colorOrange"
        gauge:scaleColor="@color/colorOrange"
        gauge:totalNicks="150"
        gauge:valuePerNick="1" />

    <de.nitri.gauge.Gauge
        android:id="@+id/gauge3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="85dp"
        gauge:faceColor="@color/colorBlackTransparent"
        gauge:initialValue="0"
        gauge:labelTextSize="15"
        gauge:maxValue="120"
        gauge:minValue="0"
        gauge:needleColor="@color/colorOrange"
        gauge:scaleColor="@color/colorOrange"
        gauge:totalNicks="150"
        gauge:valuePerNick="1" />

    <de.nitri.gauge.Gauge
        android:id="@+id/gauge4"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="235dp"
        gauge:faceColor="@color/colorBlackTransparent"
        gauge:initialValue="0"
        gauge:labelTextSize="15"
        gauge:maxValue="120"
        gauge:minValue="0"
        gauge:needleColor="@color/colorOrange"
        gauge:scaleColor="@color/colorOrange"
        gauge:totalNicks="150"
        gauge:valuePerNick="1" />

    <de.nitri.gauge.Gauge
        android:id="@+id/gauge5"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="460dp"
        android:layout_marginTop="85dp"
        gauge:faceColor="@color/colorBlackTransparent"
        gauge:initialValue="0"
        gauge:labelTextSize="15"
        gauge:maxValue="120"
        gauge:minValue="0"
        gauge:needleColor="@color/colorOrange"
        gauge:scaleColor="@color/colorOrange"
        gauge:totalNicks="150"
        gauge:valuePerNick="1" />

    <de.nitri.gauge.Gauge
        android:id="@+id/gauge6"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="460dp"
        android:layout_marginTop="235dp"
        gauge:faceColor="@color/colorBlackTransparent"
        gauge:initialValue="0"
        gauge:labelTextSize="15"
        gauge:maxValue="120"
        gauge:minValue="0"
        gauge:needleColor="@color/colorOrange"
        gauge:scaleColor="@color/colorOrange"
        gauge:totalNicks="150"
        gauge:valuePerNick="1" />

    <ImageView
        android:id="@+id/gauge1_large"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/gauge1"
        android:layout_alignTop="@id/gauge1"
        gauge:srcCompat="@drawable/gauge_cover" />

    <ImageView
        android:id="@+id/gauge2_large"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/gauge2"
        android:layout_alignTop="@id/gauge2"
        gauge:srcCompat="@drawable/gauge_cover" />

    <ImageView
        android:id="@+id/gauge1_small"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignStart="@+id/gauge3"
        android:layout_alignTop="@id/gauge3"
        gauge:srcCompat="@drawable/gauge_cover" />

    <ImageView
        android:id="@+id/gauge2_small"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignStart="@+id/gauge4"
        android:layout_alignTop="@id/gauge4"
        gauge:srcCompat="@drawable/gauge_cover" />

    <ImageView
        android:id="@+id/gauge3_small"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignStart="@+id/gauge5"
        android:layout_alignTop="@id/gauge5"
        gauge:srcCompat="@drawable/gauge_cover" />

    <ImageView
        android:id="@+id/gauge4_small"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignStart="@+id/gauge6"
        android:layout_alignTop="@id/gauge6"
        gauge:srcCompat="@drawable/gauge_cover" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="417dp"
        android:layout_height="39dp"
        android:layout_below="@+id/btn_connection"
        android:layout_centerHorizontal="true"
        gauge:srcCompat="@drawable/live_data" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/gauge1"
        android:layout_marginStart="81dp"
        android:layout_marginTop="190dp"
        android:text="EGT"
        android:textColor="@color/colorOrange"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/gauge2"
        android:layout_marginStart="73dp"
        android:layout_marginTop="190dp"
        android:text="Boost"
        android:textColor="@color/colorOrange"
        android:textSize="20dp"
        />


</RelativeLayout>