<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LiveDataActivityNewSpeed2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_middle_logo" />

    <TextView
        android:id="@+id/tunenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="125dp"
        android:layout_marginTop="8dp"
        android:text="@string/tune"
        android:textColor="@color/colorGray"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/gear_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/gear_position"
        android:textColor="@color/colorGray"
        android:textSize="26dp" />

    <com.github.anastr.speedviewlib.ImageSpeedometer
        android:id="@+id/speedGauge1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="-63dp"
        android:layout_marginTop="110dp"
        app:sv_backgroundCircleColor="@color/colorBlackTransparent"
        app:sv_endDegree="360"
        app:sv_image="@drawable/gauge_test"
        app:sv_indicator="TriangleIndicator"
        app:sv_indicatorColor="?attr/speedtext_color"
        app:sv_markColor="?attr/speedtext_color"
        app:sv_maxSpeed="35000"
        app:sv_speedTextColor="?attr/speedtext_color"
        app:sv_speedTextPadding="125dp"
        app:sv_speedTextPosition="TOP_CENTER"
        app:sv_speedTextSize="16dp"
        app:sv_startDegree="90"
        app:sv_textColor="?attr/speedtext_color"
        app:sv_textSize="12dp"
        app:sv_tickNumber="11"
        app:sv_tickPadding="26dp"
        app:sv_unit="psi"
        app:sv_unitTextColor="?attr/speedtext_color"
        app:sv_unitTextSize="16dp"
        app:sv_withTremble="false" />

    <com.github.anastr.speedviewlib.ImageSpeedometer
        android:id="@+id/speedGauge2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="110dp"
        app:sv_backgroundCircleColor="@color/colorBlackTransparent"
        app:sv_endDegree="360"
        app:sv_image="@drawable/gauge_test"
        app:sv_indicator="TriangleIndicator"
        app:sv_indicatorColor="?attr/speedtext_color"
        app:sv_markColor="?attr/speedtext_color"
        app:sv_maxSpeed="40"
        app:sv_minSpeed="-40"
        app:sv_speedTextColor="?attr/speedtext_color"
        app:sv_speedTextPadding="125dp"
        app:sv_speedTextPosition="TOP_CENTER"
        app:sv_speedTextSize="16dp"
        app:sv_startDegree="90"
        app:sv_textColor="?attr/speedtext_color"
        app:sv_textSize="12dp"
        app:sv_tickNumber="9"
        app:sv_tickPadding="25dp"
        app:sv_unit=""
        app:sv_unitTextColor="?attr/speedtext_color"
        app:sv_unitTextSize="16dp"
        app:sv_withTremble="false" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="253dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/live_data"
        android:contentDescription="@string/live_data" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/home_grey" />

    <ImageView
        android:id="@+id/wifi_switch"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/speedGauge1"
        android:layout_alignEnd="@+id/speedGauge1"
        android:layout_alignStart="@+id/speedGauge1"
        android:layout_alignTop="@+id/speedGauge1"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="@string/frp"
        android:textColor="?attr/speedtext_color"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/speedGauge2"
        android:layout_alignEnd="@+id/speedGauge2"
        android:layout_alignStart="@+id/speedGauge2"
        android:layout_alignTop="@+id/speedGauge2"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="@string/timing"
        android:textColor="?attr/speedtext_color"
        android:textSize="20dp" />

    <Button
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="54dp"
        android:text="@string/back" />

</RelativeLayout>