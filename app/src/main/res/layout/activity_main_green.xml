<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-60dp"
        android:background="@drawable/green_bg_top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-67dp"
        android:background="@drawable/green_bg_bottom" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_middle" />

    <ImageView
        android:id="@+id/wifi_switch"
        android:layout_width="58dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:background="@drawable/green_wifi" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="185dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/logogdp" />


    <Button
        android:id="@+id/btn_tune"
        android:layout_width="410dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="220dp"
        android:background="@drawable/button_press_green"
        android:drawableEnd="@drawable/tune_icon"
        android:paddingEnd="5dp"
        android:paddingStart="20dp"
        android:text="TUNE SWITCHING"
        android:textAlignment="textStart"
        android:textSize="34sp" />

    <Button
        android:id="@+id/btn_live_data"
        android:layout_width="410dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="300dp"
        android:background="@drawable/button_press_green"
        android:drawableEnd="@drawable/livedata_icon"
        android:paddingEnd="5dp"
        android:paddingStart="20dp"
        android:text="LIVE DATA"
        android:textAlignment="textStart"
        android:textSize="34sp" />

    <Button
        android:id="@+id/btn_config"
        android:layout_width="410dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_tune"
        android:background="@drawable/button_press_green"
        android:drawableEnd="@drawable/configuration_icon"
        android:paddingEnd="5dp"
        android:paddingStart="20dp"
        android:text="CONFIGURATION"
        android:textAlignment="textStart"
        android:textSize="34sp" />

    <Button
        android:id="@+id/btn_diag"
        android:layout_width="410dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_live_data"
        android:background="@drawable/button_press_green"
        android:drawableEnd="@drawable/diagnostics_icon"
        android:paddingEnd="5dp"
        android:paddingStart="20dp"
        android:text="DIAGNOSTICS"
        android:textAlignment="textStart"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/btn_info"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/helpbutton" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:background="@drawable/home_green" />


</RelativeLayout>
