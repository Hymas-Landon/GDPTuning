<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context=".FeaturesActivity"
    tools:ignore="spUsage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_middle_logo"
        android:contentDescription="@string/background_with_logo" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:background="@color/transparent"
        android:text="HOME"
        android:textColor="@color/colorGray"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/tunenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="125dp"
        android:text="@string/tune"
        android:textColor="@color/colorGray"
        android:textSize="26dp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/gear_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:text="@string/gear_position"
        android:textColor="@color/colorGray"
        android:textSize="26dp"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/arrowRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/selector1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="?attr/triangle_button_right" />

    <ImageView
        android:id="@+id/arrowLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/selector1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="320dp"
        app:srcCompat="?attr/triangle_button_left" />

    <TextView
        android:id="@+id/selector1"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_toStartOf="@id/arrowRight"
        android:textAlignment="center"
        android:textColor="?attr/features_text_color"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/arrowRight3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/selector3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="?attr/triangle_button_right" />

    <ImageView
        android:id="@+id/arrowLeft3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/selector3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="320dp"
        app:srcCompat="?attr/triangle_button_left" />

    <TextView
        android:id="@+id/selector3"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_toStartOf="@id/arrowRight3"
        android:textAlignment="center"
        android:textColor="?attr/features_text_color"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/first_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/selector1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text="@string/us_standard_metric"
        android:textColor="?attr/features_text_color"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/third_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/selector3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text="@string/select_color_scheme"
        android:textColor="?attr/features_text_color"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="90dp"
        android:text="@string/app_version"
        android:textColor="?attr/features_text_color"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/app_version_num"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="190dp"
        android:layout_marginBottom="90dp"
        android:layout_alignStart="@id/app_version"
        android:textColor="?attr/features_text_color"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/current_status"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="90dp"
        android:text="@string/current_status"
        android:textColor="?attr/features_text_color"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/current_status_lock"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="230dp"
        android:layout_marginBottom="90dp"
        android:layout_alignStart="@id/current_status"
        android:textColor="?attr/features_text_color"
        android:textSize="30dp" />

</RelativeLayout>