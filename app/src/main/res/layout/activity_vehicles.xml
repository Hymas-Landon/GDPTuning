<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/background_color"
    tools:ignore="SpUsage"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_middle_logo"
        android:contentDescription="@string/background_with_logo" />

    <TextView
        android:id="@+id/features"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="YOUR VEHICLES"
        android:textColor="@color/colorGray"
        android:textSize="46dp" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:background="@color/transparent"
        android:text="HOME"
        android:textColor="@color/colorGray"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/tunenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="125dp"
        android:text="@string/tune"
        android:textColor="@color/colorGray"
        android:textSize="26dp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/gear_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:text="@string/gear_position"
        android:textColor="@color/colorGray"
        android:textSize="26dp"
        tools:ignore="RelativeOverlap" />

    <EditText
        android:id="@+id/vehicle_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="101dp"
        android:hint="ADD NEW VEHICLE"
        android:textColorHint="?attr/features_text_color"
        android:textAlignment="center"
        android:maxLines="1"
        android:lines="1"
        android:textSize="30dp"
        android:textColor="?attr/features_text_color" />

    <Button
        android:id="@+id/save_vehicle"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="260dp"
        android:layout_alignTop="@id/confirm_selection"
        android:text="SAVE NEW VEHICLE" />

    <Button
        android:id="@+id/confirm_selection"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="305dp"
        android:text="CONFIRM SELECTION" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAKE &amp; MODEL"
        android:textSize="30dp"
        android:layout_alignTop="@id/vehicle_name"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@id/selector1"
        android:layout_marginEnd="0dp"
        android:textColor="?attr/features_text_color" />

    <ImageView
        android:id="@+id/arrowRight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/save_vehicle"
        android:layout_marginStart="320dp"
        app:srcCompat="?attr/triangle_button_right" />

    <ImageView
        android:id="@+id/arrowLeft"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/arrowRight"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="-40dp"
        app:srcCompat="?attr/triangle_button_left" />

    <TextView
        android:id="@+id/selector1"
        android:layout_width="185dp"
        android:layout_height="36dp"
        android:layout_alignTop="@id/arrowRight"
        android:layout_marginTop="2.5dp"
        android:layout_alignEnd="@id/arrowRight"
        android:layout_marginEnd="42dp"
        android:layout_toStartOf="@id/arrowRight"
        android:textAlignment="center"
        android:textColor="?attr/features_text_color"
        android:textSize="26dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="750dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="#c0393838"
        tools:listitem="@layout/code_recycler_blueprint" />

</RelativeLayout>