<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gdp"
    tools:context=".WifiActivity">

    <Button
        android:id="@+id/btn_home"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:background="@drawable/home_press" />

    <View
        android:id="@+id/password_line"
        android:layout_width="700dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:background="@color/colorOrange" />

    <View
        android:id="@+id/ssid_line"
        android:layout_width="700dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@color/colorOrange" />

    <ToggleButton
        android:id="@+id/wifi_switch"
        android:layout_width="58dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="4.5dp"
        android:background="@drawable/wifi_not_connected_pressed"
        android:textOff=""
        android:textOn="" />

    <ImageView
        android:id="@+id/btn_info"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/info_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/helpbutton" />

    <TextView
        android:id="@+id/text_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorOrange" />

    <TextView
        android:id="@+id/connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/connected"
        android:textColor="@color/colorOrange"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password_line"
        android:layout_alignStart="@+id/password_line"
        android:text="@string/link_speed"
        android:textColor="@color/colorOrange"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ssid_line"
        android:layout_alignStart="@+id/ssid_line"
        android:text="@string/wifi_ssid"
        android:textColor="@color/colorOrange"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/current_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ssid_line"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@color/colorOrange"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/current_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password_line"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@color/colorOrange"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/cur_wifi"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:background="@drawable/gradient_orange"
        android:onClick="goToWifiSettings"
        android:text="@string/change_wifi_settings"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>