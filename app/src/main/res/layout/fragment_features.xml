<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeaturesActivity"
    tools:ignore="spUsage">

    <TextView
        android:id="@+id/actual"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="190dp"
        android:layout_toStartOf="@id/arrowRight"
        android:text="CURRENT"
        android:textAlignment="center"
        android:textColor="?attr/features_text_color"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/desired"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@id/arrowRight"
        android:text="DESIRED"
        android:textAlignment="center"
        android:textColor="?attr/features_text_color"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/arrowRight"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/selector1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="30dp"
        app:srcCompat="?attr/triangle_button_right" />

    <ImageView
        android:id="@+id/arrowLeft"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/selector1"
        android:layout_alignEnd="@id/arrowLeft4"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="-5dp"
        app:srcCompat="?attr/triangle_button_left" />

    <TextView
        android:id="@+id/selector1"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_toStartOf="@id/arrowRight"
        android:text=""
        android:textAlignment="center"
        android:textColor="?attr/features_text_color"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/actual1"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="190dp"
        android:layout_toStartOf="@id/arrowRight"
        android:text=""
        android:textAlignment="center"
        android:textColor="?attr/features_text_color"
        android:textSize="28dp" />

    <ImageView
        android:id="@+id/arrowRight2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/selector2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="30dp"
        app:srcCompat="?attr/triangle_button_right" />

    <ImageView
        android:id="@+id/arrowLeft2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/selector2"
        android:layout_alignEnd="@id/arrowLeft4"
        android:layout_marginStart="-60dp"
        android:layout_marginTop="-5dp"
        app:srcCompat="?attr/triangle_button_left" />

    <TextView
        android:id="@+id/selector2"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:layout_toStartOf="@id/arrowRight2"
        android:text=""
        android:textAlignment="center"
        android:textColor="?attr/features_text_color"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/actual2"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="190dp"
        android:layout_toStartOf="@id/arrowRight2"
        android:text=""
        android:textAlignment="center"
        android:textColor="?attr/features_text_color"
        android:textSize="28dp" />

    <ImageView
        android:id="@+id/arrowRight3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/selector3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="30dp"
        app:srcCompat="?attr/triangle_button_right" />

    <ImageView
        android:id="@+id/arrowLeft3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/selector3"
        android:layout_alignEnd="@id/arrowLeft4"
        android:layout_marginStart="-60dp"
        android:layout_marginTop="-5dp"
        app:srcCompat="?attr/triangle_button_left" />

    <TextView
        android:id="@+id/selector3"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:layout_toStartOf="@id/arrowRight3"
        android:text=""
        android:textAlignment="center"
        android:textColor="?attr/features_text_color"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/actual3"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="190dp"
        android:layout_toStartOf="@id/arrowRight3"
        android:text=''
        android:textAlignment="center"
        android:textColor="?attr/features_text_color"
        android:textSize="28dp" />

    <ImageView
        android:id="@+id/arrowRight4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/selector4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="30dp"
        app:srcCompat="?attr/triangle_button_right" />

    <ImageView
        android:id="@+id/arrowLeft4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/selector4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="210dp"
        app:srcCompat="?attr/triangle_button_left" />

    <TextView
        android:id="@+id/selector4"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="275dp"
        android:layout_toStartOf="@id/arrowRight4"
        android:maxLines="2"
        android:text=""
        android:textAlignment="center"
        android:textColor="?attr/features_text_color"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/actual4"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="190dp"
        android:layout_toStartOf="@id/arrowRight4"
        android:maxLines="2"
        android:text=""
        android:textAlignment="center"
        android:textColor="?attr/features_text_color"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/first_selector_features"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text=""
        android:textAlignment="textStart"
        android:gravity="center"
        android:textColor="?attr/features_text_color"
        android:textSize="28dp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/second_selector_features"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_marginTop="115dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text=""
        android:textAlignment="textStart"
        android:gravity="center"
        android:textColor="?attr/features_text_color"
        android:textSize="28dp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/third_selector_features"
        android:layout_width="460dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/selector3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text=""
        android:textColor="?attr/features_text_color"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/fourth_selector_features"
        android:layout_width="460dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/selector4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text=""
        android:textColor="?attr/features_text_color"
        android:textSize="28dp" />


</RelativeLayout>